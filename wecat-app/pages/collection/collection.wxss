.collection-title {
    display: block;
    text-align: center;
    font-size: 20px;
    font-family: "微软雅黑";
    font-weight: bold;
    margin-bottom: 10px;
}
.collection-for{
    display: inline-block;
    text-align: center;
}
.collection-for image{
    width: 120px;
    height: 120px;
    margin-left: 4px;
    margin-top: 4px;
}
.collection-fail{
    width: 80px;
    margin-left: 20px;
    font-family: "微软雅黑";
    font-size: 14px;
    text-align: center;
    border: 1px solid gray;
    border-radius:5px; 
}